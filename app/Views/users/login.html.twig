{% extends 'layout.html.twig' %}
{#{% import 'form.html.twig' as form %}#}

{% block head %}
    <title>Se connecter</title>
{% endblock %}


{% block main %}
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="col-md-12">
                 <h1 class="font-weight-bold text-center text-uppercase display-4">Connexion</h1>
            </div>
        <div class="row-fluid">
            <div class="col-md-12 text-center">
                <form method="post">
                {% if errors %}
                <div class="alert alert-danger">
                    Identifiants incorrects
                </div>
                {% endif %}
                    <div class="form-group">
                        {{ form.input('username', 'Login', {type: 'text'}) | raw }}
                        {{ form.input('password', 'Mot de passe', {type: 'password' }) | raw }}
                        <div class="col-md-12">
                        {{ form.submit('Envoyer', {class: 'col-md'}) | raw}}
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    </div>
{% endblock %}


