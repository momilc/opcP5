{% extends 'layout.html.twig' %}
{% import 'form.html.twig' as form %}

{% block head %}
    <title>Edition</title>
{% endblock %}

{% block body %}
    {% block sidebar %}
        {{ parent() }}
        <h2>Edition Catégories</h2>

        <ul>

            {% if categories %}

                <li>
                    <a href="{{ categories.url }}">
                        {{ categories.titre }}
                    </a>
                </li>
            {% endif %}
        </ul>

    {% endblock %}

    {% block content %}
        <div class="container-fluid">
            <h1>Ajouter articles</h1>

            <div class="row">
                <div class="col-md-12 mx-auto">

                    <form method="post">
                        {{ form.input('titre', 'Titre de l\'article', name, {class: 'col-md-12', type: 'text'}) }}
                        {{ form.input('contenu', 'Contenu de l\'article', name, {class: 'col-md-12', type: 'textarea'}) }}
                        <div class="col-md-12 mx-auto">
                        <label class="form-control-label">Catégories
                            <select id="select" class="form-control" name="category_id">
                                {% for category_id, categorie in categories %}
                                <option>
                                {{ categorie }}
                                </option>
                                {% endfor %}
                            </select>
                        </label>
                        </div>
                        {{ form.button('Sauvegarder', {class: 'col-md', type: 'submit'})}}
                    </form>

                </div>

            </div>
        </div>


    {% endblock %}
{% endblock body %}